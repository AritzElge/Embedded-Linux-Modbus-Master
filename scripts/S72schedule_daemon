#!/bin/sh

# S72schedule_daemon: Launches schedule daemon with failover logic.

# Binary paths
HDD_BLINK_BINARY="/mnt/hdd/daemons/modbus/start_schedule_daemon.sh"
SD_BLINK_BINARY="/usr/bin/start_schedule_daemon.sh"
LOG_FILE="/dev/kmsg" # Kernel log for boot messages

# --- Function to write log messages ---
log_message() {
    echo "S72schedule_daemon: $1" >> "$LOG_FILE"
}

# --- 1. Attempt to start the schedule Daemon from the HDD (Primary location) ---
if [ -f "$HDD_BLINK_BINARY" ]; then
    log_message "INFO: HDD mounted. Starting schedule_daemon.py  from HDD."
    # Execute in the background
    "$HDD_BLINK_BINARY" &
    PID=$!
    log_message "INFO: schedule_daemon.py  (HDD) started with PID $PID."

# --- 2. If the binary is not on the HDD, check the internal SD (Failover location) ---
elif [ -f "$SD_BLINK_BINARY" ]; then
    log_message "WARNING: schedule daemon not found on HDD. Starting from SD backup (/usr/bin/)."
    # Execute in the background
    "$SD_BLINK_BINARY" &
    PID=$!
    log_message "INFO: schedule_daemon.py (SD) started with PID $PID."

# --- 3. If the binary is not found anywhere, report a critical error ---
else
    log_message "CRITICAL ERROR: schedule_daemon.py not found on HDD or SD."
    # Write an error 15 (schedule daemon internal failure)
    echo -n "3" > /tmp/status/system_status.txt
fi

log_message "INFO: S71schedule_daemon finished execution."

exit 0
